<%- include partials/html -%>
<head>
  <%- include partials/head -%>
</head>
<body>
  <%- include partials/header -%>
  <main role="main" class="container">
    <h1>Signup</h1>

    <form id="signup-form" class="small-form" onsubmit="signup(); return false;">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username" />
        <small class="text-muted">This is how you will be identified to other users.</small>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" />
        <small class="text-muted">You will use this email to login.</small>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" />
        <small class="text-muted">You will login with this password.</small>
      </div>

      <div class="form-group">
        <label for="key_password">Private Key Password</label>
        <input type="password" class="form-control" id="key_password" name="key_password" />
        <small class="text-muted">This password will be used to unlock your private key.
            <br />It will not be stored anywhere. If you forget it, your messages will be
            unrecoverable.</small>
      </div>

      <input type="submit" class="btn btn-primary" value="Submit" />
    </form>

    <p id="keygen-progress" style="width: 100%; overflow: hidden;"></p>

    <form id="submit-form" action="/signup" method="post" style="display: none;">
      <input type="text" id="username2" name="username" />
      <input type="text" id="email2" name="email" />
      <input type="password" id="password2" name="password" />
      <textarea id="private" name="private"></textarea>
      <textarea id="public" name="public"></textarea>
    </form>
  </main>

  <script type="text/javascript" src="/kbpgp"></script>
  <script type="text/javascript" src="/scripts/signup.js"></script>
</body>
</html>
